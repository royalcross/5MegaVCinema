<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.itwillbs.vCinema.mapper.NoticeMapper">
    <insert id="insertNotice">
		INSERT
		INTO notice
		VALUES (
			 #{notice_num}
			, #{notice_type}
			, #{notice_subject}
			, #{notice_content}
			,now()
			  
		)
	</insert>
	<select id="selectNotice" resultType="hashmap">
		select *
		from notice n join theater t
		on n.notice_theater_name = t.theater_name;
	</select>
    
    </mapper>